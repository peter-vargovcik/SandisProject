<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vargovcik.peter.happypear.components.CustomWeekPicker
        android:id="@+id/calendarTableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_white"
        custom:text_color="#ffffff"
        custom:text_size="20dp" />


    <TableLayout
        android:id="@+id/totalTableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_white">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_2"
                android:gravity="center"
                android:text="Centra total sales value:"
                android:textColor="@color/color_4"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="SuperValu total sales valuse:"
                android:textColor="@color/color_5"
                android:textSize="13dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_4"
                android:gravity="center"
                android:text="$ 2.300.00"
                android:textColor="@color/color_2"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_5"
                android:gravity="center"
                android:text="$ 35.250.00"
                android:textColor="@color/color_3"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_4"
                android:gravity="center"
                android:text="Performace $:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_5"
                android:gravity="center"
                android:text="Performace $:" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_4"
                android:gravity="center"
                android:text="+ $123.00"
                android:textColor="@color/color_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_5"
                android:gravity="center"
                android:text="- $1,123.00"
                android:textColor="@color/color_3" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_4"
                android:gravity="center"
                android:text="Performace %:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_5"
                android:gravity="center"
                android:text="Performace %:" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_4"
                android:gravity="center"
                android:text="+ 1,23%"
                android:textColor="@color/color_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_5"
                android:gravity="center"
                android:text="- 2,56%"
                android:textColor="@color/color_3" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/shop_performance_sumary_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4">

                <TableLayout
                    android:id="@+id/shopPerforamceTableView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/content_white"
                    app:layout_constraintTop_toBottomOf="@id/calendarTableView">

                    <TableRow>

                        <TextView
                            android:id="@+id/performance_shops_count_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:text="Shops: 8"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/performance_shops_count_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:text="Shops: 42"
                            android:textSize="18dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/performance_shops_plus_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:paddingBottom="20dp"
                            android:text="Shops: 8" />

                        <TextView
                            android:id="@+id/performance_shops_plus_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="Shops: 42" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/performance_shops_minus_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:paddingBottom="20dp"
                            android:text="Shops: 8" />

                        <TextView
                            android:id="@+id/performance_shops_minus_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="Shops: 42" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/performance_shops_total_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:paddingBottom="20dp"
                            android:text="Shops: 8" />

                        <TextView
                            android:id="@+id/performance_shops_total_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="Shops: 42" />
                    </TableRow>

                </TableLayout>


                <com.vargovcik.peter.happypear.components.DualPerformanceView
                    android:id="@+id/performance_view_shops"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    custom:left_side_background_color="@color/left_side"
                    custom:left_side_text_color="@color/content_white"
                    custom:name_text_color="@color/text_color"
                    custom:right_side_background_color="@color/right_side"
                    custom:right_side_text_color="@color/content_white"
                    custom:size="120dp" />


            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/performance_view_shops_list_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />

                <ListView
                    android:id="@+id/performance_view_shops_list_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
            </LinearLayout>

        </LinearLayout>


